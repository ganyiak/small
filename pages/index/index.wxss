/**index.wxss**/
page{
  height: 100%;
  background: linear-gradient(#48077b,#791baf);
  overflow: hidden;
}
.accredit-view{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 100;
  /* display: none; */
  background-color: rgba(0,0,0,0.5);

}
.getUserInfo{
  width: 60%;
  margin-top: 60%;
}
.scroll-area{
  height: 100%;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.menu-page{
  width: 100%;
  height: 100%;
}
.user-content{
  width: 90%;
  height: 15%;
  border-radius: 10px;
  background: linear-gradient(#f57ddf,#f27ee1);
  margin-left: 5%;
  margin-top: 5%;
  display: flex;
}
.user-head{
  width: 80px;
  margin-left: 6%;
  margin-top: 3%;
}
.head{
  width: 80px;
  height: 80px;
  border-radius: 50%;
}
/*昵称  */
.user-name{
  color: #fff;
  font-size: 16px;
  padding: 16px;
}
.exprice{
  display: flex;
  width: 80%;
}
.grade{
  color: #f3d72e;
}
.progress{
  width: 100%;
  margin-left: 20%;
}
.degree-content{
  margin-top: 5%;
  margin-left: 10%;
}
.degree-icon{
  width: 50px;
  height: 50px;
  border-radius: 10px;
}
.degree-grade{
  color: #fff;
  font-weight: bold;
  font-size: 16px;
  position: absolute;
  margin-top: 3%;
  margin-left: 1%;
}
.school-content{
  width: 90%;
  height: 100%;
  margin-left: 5%;
  margin-top: 6%;
  /* border: 1px solid #f27ee1; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.school-item{
  width: 45%;
  height: 30%;
  border-radius: 20px;
  /* border: 1px solid #f27ee1; */
}