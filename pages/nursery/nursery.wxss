/* pages/nursery/nursery.wxss */
page{
  height: 100%;
  width: 100%;
  background: linear-gradient(#48077b,#791baf);
  position: relative;
}
.nursery-page{
  height: 100%;
  width: 100%;
}
.nursery-scroll{
  height: 100%;
}
.logo-wrap{
  width: 20%;
  height: 10%;
  position: absolute;
  right: 0%;
  animation: logo-move 16s linear infinite;
  transform-origin: 50% 50%;
}
.logo-content{
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 10%;
  position: absolute;
  transform-origin: 50% 50%;
}
@keyframes logo-move{
 0% {
        left: 0%;
    }
50% {
        left: 80%;
    }
100%{
        left: 0%;
    }
} 