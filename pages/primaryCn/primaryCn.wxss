/* pages/primaryCn/primaryCn.wxss */
page{
  height: 100%;
  overflow: hidden;
  background: #843e1c;
  position: relative;
}
.welcomeText{
  width: 100%;
  color: #000;
  text-align: center;
  font-size: 20px;
  letter-spacing: 2px;
}
.residue-time{
  color: #47feab;
  font-size: 40rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  text-align:center;
}
.time-progress{
  width: 100%;
  height: 40rpx;
  border: 4rpx solid #fff;
  box-sizing: border-box;
}
.progress{
  height: 36rpx;
  background: #47feab;
}
.question-content{
  width: 100%;
  position: absolute;
  height: 600rpx;
  text-align: center;
  top: 40%;
  transform-origin: 50%,50%;
  transform: scale(0,0)
}
.question-title{
  color: #000;
  font-size: 32rpx;
  font-weight: bold;
  width: 80%;
  height: 100rpx;
  border-radius: 10px;
  background: #fff;
  margin: 0 auto;
  line-height: 100rpx;
}
.answer{
  color: #000;
  position: a;
  background-color: #fff;
  width: 90%;
  margin: 0 auto;
  margin-top: 3%;
  height: 100rpx;
  border-radius: 10px;
  line-height: 100rpx;
  letter-spacing: 6rpx;
}
.answer-hover{
  color: #000;
  position: a;
  background-color: #C0FF3E;
  width: 90%;
  margin: 0 auto;
  margin-top: 3%;
  height: 100rpx;
  border-radius: 10px;
  line-height: 100rpx;
  transform: scale(1.1,1.1);
}
@keyframes bounce{
  0%{
    transform: scale(1,1)
  }
  100%{
    transform: scale(1.8,1.8)
  }
}
